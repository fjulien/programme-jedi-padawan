---
interface Props {
	pageTitle?: string;
}

const navigationItems = [
	{ name: "Accueil", url: "/programme-jedi-padawan" },
	{ name: "Blog", url: "/blog/" },
];

const socialIcons = [
	{
		name: "GitHub",
		url: "https://github.com/fjulien",
		icon: "i-uil-github",
	},
	{
		name: "Twitter",
		url: "https://www.twitter.com/f_julien_fr",
		icon: "i-uil-twitter",
	},
	{ name: "RSS", url: "/programme-jedi-padawan/feed.xml", icon: "i-uil-rss" },
];

const { pageTitle } = Astro.props;
---

<header class='border-b-4 border-black flex justify-between p-6 items-center'>
  {pageTitle && <h1 class='hidden'>{pageTitle}</h1>}
  <a href='/programme-jedi-padawan' title='Retour à l'accueil'>
    <abbr class='righteous md:text-5xl' title="Programme jedi padawan">PJP</abbr> 
  </a>
  <nav class='hidden md:inline-block'>
    <h2 class='hidden'>Navigation</h2>
    <ul class='flex gap-8 poppins'>
      {
        navigationItems.map((item) => (
          <li>
            <a
              class='text-lg font-medium hover:text-green hover:underline transition-all duration-150 ease-in-out'
              href={item.url}
              title={`Aller à ${item.name}`}
            >
              {item.name}
            </a>
          </li>
        ))
      }
      {
        socialIcons.map((item) => (
          <li>
            <a
              href={item.url}
              class='hover:text-green hover:underline transition-all duration-150 ease-in-out'
              target='_blank'
              title={`'Voir @fjulien on ${item.name}`}
            >
              <div class:list={[item.icon, 'w-6 h-6']} />
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <nav class='md:hidden flex'>
    <h2 class='hidden'>Mobile Navigation</h2>
    <ul>
      <li><a href='/programme-jedi-padawan/blog/'>Blog</a></li>
    </ul>
  </nav>
</header>
