---
import "../styles/global.css";
import {Button, Card} from "@eliancodes/brutal-ui";

interface Props {
	title: string;
	link?: string;
    libelle?: string;
}

const { title, link,libelle } = Astro.props;
---

  <section class="grid grid-cols-1 md:grid-cols-3 grid-rows-* mt-20 gap-y-10 gap-x-4">
    <div class="md:grid-start-1 col-span-1 row-span-full sticky top-8">
      <Card >
        <div class="flex flex-col items-center gap-8">
          <p class='text-2xl md:text-5xl lg:text-6xl'>{title}</p>
          {(link && libelle) && <Button class="brutal-btn w-max" href={link}>{libelle}</Button>}
        </div>
      </Card>
    </div>
    <slot />
  </section>
